	{
		for (folder in Mods.directoriesWithFile(path, folder, mods))
		{
			for (file in FileSystem.readDirectory(folder))
			{
				#if LUA_ALLOWED
				if(file.toLowerCase().endsWith('.lua'))
					new FunkinLua(folder + file);
				#end
	
